
root = true

[*]
charset = utf-8
indent_style = tab
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_size = 4

[*.{yaml,yml}]
indent_style = space

[*.json, *.yml, *.yaml, *.manifest]
indent_style = space
indent_size = 2

[*.go]
indent_style = tab
indent_size = 2

[*.md]
trim_trailing_whitespace = false
insert_final_newline = false
